<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Add New Item"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errItemNameInput"
        android:text="Name is Required"
        android:visibility="invisible"
        />



    <EditText
        android:id="@+id/inputItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errItemSkuInput"
        android:text="SKU is Required"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/inputSKU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SKU"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errItemCountInput"
        android:text="Count is Required (number chars only)"
        android:visibility="invisible"
        />
    <EditText
        android:id="@+id/inputCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Count"
        android:inputType="number"
        android:layout_marginBottom="24dp" />

</LinearLayout>
